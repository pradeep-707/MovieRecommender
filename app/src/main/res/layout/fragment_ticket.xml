<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TicketFragment"
    android:id="@+id/tickets_parent_linear_layout"
    android:orientation="vertical"
    android:background="@android:color/black">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Book Tickets for the Martian (2014)"
        android:textColor="@android:color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Date: "
        android:textColor="@android:color/white"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RadioButton
            tools:text="01.01.2021"
            android:id="@+id/radio_date_one"
            android:layout_width="0dp"
            android:checked="true"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_weight="1"
            android:buttonTint="@android:color/holo_blue_dark"/>

        <RadioButton
            android:layout_width="0dp"
            android:id="@+id/radio_date_two"
            tools:text="02.01.2021"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_weight="1"
            android:buttonTint="@android:color/holo_blue_dark"/>

        <RadioButton
            android:layout_width="0dp"
            tools:text="03.01.2021"
            android:id="@+id/radio_date_three"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_weight="1"
            android:buttonTint="@android:color/holo_blue_dark"/>

    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Seats: "
        android:textColor="@android:color/white"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="CONFIRM SEATS AND BOOK"
        android:id="@+id/confirm_seats_button"/>

</LinearLayout>